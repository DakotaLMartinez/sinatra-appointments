<div class="container">
  <h2>Student Information</h2>
  <form action="/students" method="post">
    <p><label for="student[name]">Student Name: </label><input type="text" name="student[name]"></p>
    <p><label for="student[email]">Email Address: </label><input type="text" name="student[email]"></p>
    <p><label for="student[phone_number]">Phone Number: </label><input type="text" name="student[phone_number]"></p>
    <p><label for="student[contact_method]">Preferred Contact Method: </label>
    <select name="student[contact_method]">
      <option value="email">Email</option>
      <option value="phone">Phone</option>
    </select></p>
    <p><input type="submit" value="Save My Info"></p>
  </form>
</div>